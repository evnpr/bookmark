<%= form_for(@site) do |f| %>
  <% if @site.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@site.errors.count, "error") %> prohibited this site from being saved:</h2>

      <ul>
      <% @site.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :title, :placeholder=>'Title' %>
  </div>
  <div class="field">
    <%= f.text_field :link, :placeholder=>'url' %>
  </div>
  <div class="field">
    <textarea name="site[desc]" placeholder="description"><%= @desc %></textarea>
  </div>
  <div id="name" class="field">
      <input type="hidden" name="site[category_id]" id="category" />
      <input type="text" name="category_id" placeholder="category"/>
      <br><br>
            <% for category in @categories %>
               <span class="offset1"> <code><%= category.title %> </code></span>
            <% end %>
  </div>
  <!--
  <div class="field">
    <%= f.label :profile_id %><br />
    <%= f.number_field :profile_id %>
  </div>
  -->
  <input type="hidden" name="site[profile_id]" value="<%=@profile_id%>">
  <div class="actions">
    <input type="submit" name="submit" value="Submit" class="btn-large btn-primary">
  </div>
<% end %>
